{
  "version" : "2018-05-29",
  "operation" : "UpdateItem",
  "key" : {
    "id" : $util.dynamodb.toDynamoDBJson($context.identity.username)
  },
  "update" : {
    "expression" : "set #name = :name, imageUrl = :imageUrl, backgroundImageUrl = :backgroundImageUrl, bio = :bio, #location = :location, website = :website, birthdate = :birthdate",
    "expressionNames" : {
      "#name" : "name",
      "#location" : "location"
    },
    "expressionValues" : {
      ":name" : $util.dynamodb.toDynamoDBJson($context.arguments.input.name),
      ":imageUrl" : $util.dynamodb.toDynamoDBJson($context.arguments.input.imageUrl),
      ":backgroundImageUrl" : $util.dynamodb.toDynamoDBJson($context.arguments.input.backgroundImageUrl),
      ":bio" : $util.dynamodb.toDynamoDBJson($context.arguments.input.bio),
      ":location" : $util.dynamodb.toDynamoDBJson($context.arguments.input.location),
      ":website" : $util.dynamodb.toDynamoDBJson($context.arguments.input.website),
      ":birthdate" : $util.dynamodb.toDynamoDBJson($context.arguments.input.birthdate)
    }
  },
  "condition" : {
    "expression" : "attribute_exists(id)"
  }
}